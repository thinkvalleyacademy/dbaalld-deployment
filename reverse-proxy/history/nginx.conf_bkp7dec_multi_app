############################
# 1. Redirect all HTTP to HTTPS
############################
server {
    listen 80;
    server_name chatald.online www.chatald.online;

    return 301 https://$host$request_uri;
}

server {
    listen 80;
    server_name _;

    return 301 https://$host$request_uri;
}

############################
# 2. CHAT APP (NEW PROJECT)
#    Domain: chatald.online
############################
server {
    listen 443 ssl;
    server_name chatald.online www.chatald.online;

    ssl_certificate     /etc/nginx/certs/chatald.online.crt;
    ssl_certificate_key /etc/nginx/certs/chatald.online.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Proxy to chat app running on host port 5080
    location / {
        proxy_pass http://172.17.0.1:5080;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

############################
# 3. OLD APP (DEFAULT CATCH-ALL)
############################
server {
    listen 443 ssl;
    server_name _;

    ssl_certificate     /etc/nginx/certs/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;


########## 1. OLD APP PATH - must come BEFORE root /
    location /old/ {
        rewrite ^/old/(.*)$ /$1 break;
        proxy_pass http://172.17.0.1:4080/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    ########## 2. OLD Backend (API)
    location /api/ {
        proxy_pass http://backend:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    ########## 3. Default Frontend (React/static)
    location / {
        proxy_pass http://172.17.0.1:4080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

